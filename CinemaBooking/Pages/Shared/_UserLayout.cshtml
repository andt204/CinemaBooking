@using CinemaBooking.Data
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Listings - Cinema Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <style>
        header{
            height: 10%;
        }
        .logoimg {
            width: 55px;
            height: 55px;
            transition: transform 0.2s;
        }
        .logoimg:hover {
          transform: scale(1.1); /* Tăng kích cỡ khi hover */
        }

        .navbar-nav {
            display: flex;
            flex-wrap: nowrap;
            justify-content: space-between;
            width: 100%;/* Maintain alignment across the whole navbar */
        }

            .navbar-nav .nav-item {
                margin-right: 15px; /* Space between the navigation items */
            }

        .social-icons i {
            font-size: 24px; /* Match icon size */
            margin-right: 10px;
        }

        .dropdown-menu {
            left: auto; /* Reset default left positioning */
            right: 0; /* Align to the right */
        }


    </style>
</head>
<body>

    <header class="bg-white">
        <nav class="navbar navbar-expand-lg navbar-light container">
            <a class="logo" href="/Customer/Movie/List">
                <img src="~/asserts/images/pngegg (1).png" alt="Logo" class="logoimg">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="movieDropdown" role="button" data-bs-toggle="dropdown">
                            Movie
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="movieDropdown">
                            <li><a class="dropdown-item" href="/Customer/Movie/NowShowing">Now Showing</a></li>
                            <li><a class="dropdown-item" href="/Customer/Movie/ComingSoon">Coming Soon</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="#">Showtime</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Cinema</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Review Movie</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Top Movies</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Customer/Blog/Blog">Blog</a></li>
                    <li class="nav-item">
                        @{
                            var account = ViewData["Account"] as Account;
                        }
                        @if (account == null)
                        {
                            <a class="nav-link" href="/Customer/Account/Login">Login</a>
                        }
                        else
                        {
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hello, @account.FullName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" href="/Customer/Account/ProfileForUser">Profile</a></li>
                                <li><a class="dropdown-item" href="/Customer/Ticket/HistoryTicket">History Ticket</a></li>
                                <li><a class="dropdown-item" href="/Customer/Account/ChangePassword">Change Password</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/Logout">Logout</a></li>
                            </ul>
                        }
                    </li>
                </ul>

            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>BUY MOVIE TICKETS</h5>
                    <ul class="list-unstyled">
                        <li>Movie Showtimes</li>
                        <li>Cinema</li>
                        <li>Movies in theaters</li>
                        <li>Movie reviews</li>
                        <li>Top movies</li>
                        <li>Movie blog</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Help & Support</h5>
                    <ul class="list-unstyled">
                        <li>Refunds</li>
                        <li>Find Us</li>
                        <li>Contact Us</li>
                        <li>FAQs</li>
                        <li>Health & Safety</li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>CONNECT WITH US</h5>
                    <div class="social-icons">
                        <i class="fab fa-facebook"></i>
                        <i class="fab fa-twitter"></i>
                        <i class="fab fa-instagram"></i>
                        <i class="fab fa-youtube"></i>
                    </div>
                </div>
            </div>
            <hr>
            <p class="text-center mb-0">&copy; 2024 Cinemas. All rights protected.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
