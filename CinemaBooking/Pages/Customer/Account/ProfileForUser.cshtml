@page
@model CinemaBooking.Pages.Customer.Account.ProfileForUserModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
        }

        .profile-container {
            max-width: 750px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .profile-avatar img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .form-control,
        .form-select {
            border-radius: 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
            padding: 10px 20px;
            border-radius: 30px;
            font-size: 16px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-container {
            text-align: left;
            margin-top: 30px;
        }

        .hidden {
            display: none;
        }

        .validation-message {
            color: red;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="profile-container">
            <div class="profile-avatar">
                <img src="/asserts/images/avatarclone.jpg" alt="User Avatar">
            </div>

            <h3 class="mt-4">@Model.account?.FullName</h3>
            <p class="text-muted">Customer</p>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success text-center">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="form-container">
                <form id="profileForm" method="post">
                    <!-- Validation summary for displaying model-level errors -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Thêm trường ID ẩn vào form -->
                    <input type="hidden" asp-for="account.AccountId">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fullName" class="form-label">Full Name</label>
                            <input asp-for="account.FullName" class="form-control" id="fullName">
                            <span asp-validation-for="account.FullName" class="validation-message"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="gender" class="form-label">Gender</label>
                            <select asp-for="account.Gender" class="form-select" id="gender">
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="account.Gender" class="validation-message"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input asp-for="account.Email" type="email" class="form-control" id="email">
                            <span asp-validation-for="account.Email" class="validation-message"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="dob" class="form-label">Date of Birth</label>
                            <input asp-for="account.DateOfBirth" type="date" class="form-control" id="dob">
                            <span asp-validation-for="account.DateOfBirth" class="validation-message"></span>
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-12 mb-3">
                            <label for="Phone" class="form-label">Phone</label>
                            <input asp-for="account.PhoneNumber" class="form-control" id="Phone">
                            <span asp-validation-for="account.PhoneNumber" class="validation-message"></span>
                        </div>
                    </div>
                    <div class="d-grid gap-2 d-md-block">

                        <button type="submit" id="saveBtn" class="btn btn-success ">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>



</body>

</html>
