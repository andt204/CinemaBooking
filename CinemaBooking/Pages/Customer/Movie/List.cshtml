				@{
					// Hàm chuyển đổi URL YouTube sang định dạng nhúng
					string GetEmbedUrl(string url)
					{
						var uri = new Uri(url);
						var query = HttpUtility.ParseQueryString(uri.Query);
						var videoId = query["v"];
						return $"https://www.youtube.com/embed/{videoId}";
					}
				}

