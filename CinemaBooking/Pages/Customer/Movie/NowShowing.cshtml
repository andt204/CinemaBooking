	<style>
		.search-form {
			margin: 20px 10px; /* Thêm khoảng cách trên và dưới */
		}


/* Tạo kiểu cho ô nhập liệu */
.search-input {
	width: 80%;
    padding: 10px; /* Thêm khoảng đệm bên trong */
    border: 1px solid #ccc; /* Đường viền xám */
    border-radius: 5px; /* Bo góc cho ô */
    flex: 1; /* Cho phép ô chiếm toàn bộ không gian có sẵn */
    margin-right: 10px;
	margin-top:10px;/* Khoảng cách bên phải */
    font-size: 16px; /* Kích thước chữ */
}

/* Tạo kiểu cho nút tìm kiếm */
.search-button {
    padding: 10px 15px; /* Thêm khoảng đệm bên trong */
    background-color: #007bff; /* Màu nền nút */
    color: white; /* Màu chữ */
    border: none; /* Không có đường viền */
    border-radius: 5px; /* Bo góc cho nút */
    cursor: pointer; /* Con trỏ khi hover */
    font-size: 16px; /* Kích thước chữ */
    transition: background-color 0.3s; /* Hiệu ứng chuyển màu nền */
}

/* Hiệu ứng hover cho nút */
.search-button:hover {
    background-color: #0056b3; /* Màu nền khi hover */
}
		/* Đặt nút Book Now ra giữa */
		.m-r-date {
			width:100%;
			margin-top: 10px;
		}

		.m-r-date a {
				display: inline-block; /* Đảm bảo nút nằm trên một dòng */
				padding: 5px 15px; /* Thêm padding cho nút */
				background-color: #ff5733; /* Màu nền nổi bật cho nút */
				color: white;
				text-decoration: none;
				border-radius: 5px; /* Bo tròn nút */
		}

				.m-r-date a:hover {
					background-color: #e74c3c; /* Thay đổi màu khi hover */
				}


	</style>
</head>

<body>
	<div class="container">
		<div class="main-content">
			<form method="get" class="search-form">
				<div class="search-form">
					<input type="text" name="searchTitle" placeholder="Tìm kiếm tên phim..." value="@Model.SearchTitle" class="search-input" />
					<button type="submit" class="search-button">Tìm kiếm</button>
				</div>
				<div class="now-showing-movies">
					<h3 class="m-head">Now Showing</h3>
					<div class="row">
				@foreach (var movie in Model.NowShowingMovies)
				{
					<div class="col-md-3 movie-preview">
						<a href="/Customer/Movie/DetailMovie/@movie.MovieId" class="mask">
							<img src="@movie.Image" class="img-responsive zoom-img"
								alt="@movie.Title" />
							<div class="m-movie-title">
								<a class="m-movie-link"
									href="/Customer/Movie/DetailMovie/@movie.MovieId">@movie.Title</a>
								<div class="clearfix"></div>
								<div class="m-r-date">
									<p>
										<i class="far fa-calendar"></i>@movie.PublishTime.ToShortDateString()
										&nbsp;&nbsp;&nbsp;&nbsp;Duration:@movie.Length minute
									</p>
										<a href="/Customer/CinemaSelection/CinemaSelection/@movie.MovieId">Book Now</a>
								</div>
							</div>
						</a>
					</div>
				} </div>
				<div class="clearfix"></div>
			</div>
			</form>
		</div>
	</div>

	<a href="#home" class="scroll" id="toTop" style="display: block;"> <span id="toTopHover" style="opacity: 1;">
		</span></a>
	
</body>
<script type="text/javascript">
