@page
@model CinemaBooking.Pages.Admin.Account.Add

@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Account";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <title>Create New Movie</title>
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/style.css">
</head>

<body>
<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title">Create New Account</h4>
            </div>
        </div>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <!-- Username -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.Username">Username</label>
                        <input asp-for="Input.Account.Username" class="form-control" placeholder="Enter username" required />
                        <span asp-validation-for="Input.Account.Username" class="text-danger"></span>
                    </div>
                </div>

                <!-- Avatar -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.Avatar">Avatar</label>
                        <input asp-for="Input.Account.Avatar" type="file" class="form-control-file" accept="image/*" />
                        <span asp-validation-for="Input.Account.Avatar" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Gender -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.Gender">Gender</label>
                        <select asp-for="Input.Account.Gender" class="form-control" required>
                            <option value="">Select gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                        <span asp-validation-for="Input.Account.Gender" class="text-danger"></span>
                    </div>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.PhoneNumber">Phone Number</label>
                        <input asp-for="Input.Account.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                        <span asp-validation-for="Input.Account.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Date of Birth -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.DateOfBirth">Date of Birth</label>
                        <input asp-for="Input.Account.DateOfBirth" type="date" class="form-control" />
                        <span asp-validation-for="Input.Account.DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.Email">Email</label>
                        <input asp-for="Input.Account.Email" type="email" class="form-control" placeholder="Enter email" required />
                        <span asp-validation-for="Input.Account.Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Status -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.Status">Status</label>
                        <select asp-for="Input.Account.Status" class="form-control" required>
                            <option value="1">Active</option>
                            <option value="0">Inactive</option>
                        </select>
                        <span asp-validation-for="Input.Account.Status" class="text-danger"></span>
                    </div>
                </div>

                <!-- Role -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Input.Account.RoleId">Role</label>
                        <select asp-for="Input.Account.RoleId" class="form-control" required>
                            <option value="">Select role</option>
                            @foreach (var role in Model.Input.Roles)
                            {
                            <option value="@role.Value">@role.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Input.Account.RoleId" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Create User</button>
        </form>

    </div>
</div>
<div class="sidebar-overlay" data-reff=""></div>
<script src="~/admin/assets/js/jquery-3.2.1.min.js"></script>
<script src="~/admin/assets/js/popper.min.js"></script>
<script src="~/admin/assets/js/bootstrap.min.js"></script>
<script src="~/admin/assets/js/jquery.dataTables.min.js"></script>
<script src="~/admin/assets/js/dataTables.bootstrap4.min.js"></script>
<script src="~/admin/assets/js/jquery.slimscroll.js"></script>
<script src="~/admin/assets/js/select2.min.js"></script>
<script src="~/admin/assets/js/moment.min.js"></script>
<script src="~/admin/assets/js/bootstrap-datetimepicker.min.js"></script>
<script src="~/admin/assets/js/app.js"></script>
</body>

</html>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}