@page "{id:int?}"
@model CinemaBooking.Pages.Admin.Seat.DeleteSeatsModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Delete Seats";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <h4 class="page-title">Delete Seats</h4>

        @* Display ModelState errors *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <strong>Please correct the following errors:</strong>
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <form method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="SeatId" />

            <div class="alert alert-warning">
                <strong>Warning!</strong> Are you sure you want to delete the following seats?
            </div>

            <div id="seatLayout" class="mt-3">
                <!-- Seats will be populated here -->
                @foreach (var seat in Model.SeatsToDelete)
                {
                    <div class="seat-row">
                        <span>Row: @seat.Row, Column: @seat.Column</span>
                    </div>
                }
            </div>

            <button type="submit" class="btn btn-danger">Delete Seats</button>
            <a asp-page="/Admin/Seat/CreateSeats" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</body>
</html>
