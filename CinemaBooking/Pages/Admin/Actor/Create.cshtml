@page
@model CinemaBooking.Pages.Admin.Actor.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Actor";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/style.css">
    <style>
        .filter-row .btn {
            border-radius: 0.25em;
            padding: 6px 12px;
            text-transform: uppercase;
            /*min-height: none;*/
        }

        div.dataTables_wrapper div.dataTables_length select {
            width: 5em;
            display: inline-block
        }

        
    </style>
</head>
<body>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Create New Actor</h4>
                </div>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }

            <form method="post" class="d-flex align-items-center">
                <div class="form-group mr-2 mb-0">
                    <input type="text" id="ActorName" name="ActorName" class="form-control" placeholder="Enter Actor Name" required />
                </div>
                <button type="submit" class="btn btn-primary">Save Actor</button>
            </form>

            <hr />

            <h4 class="page-title">List Actors</h4>
            <!-- Search and Filter Section -->
            <div class="row filter-row">
                <form method="get" class="d-flex align-items-center" style="margin:10px;">
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group mr-2 mb-0">
                            @* <input type="text" class="form-control" name="title" placeholder="Enter Movie Title"> *@
                            <input type="text" name="title" class="form-control" placeholder="Enter Actor Name" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success" style="padding: 6px 12px;min-height:30px;">Search</button>
                    
                </form>
            </div>

            <!-- Display List of Actors -->
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-border table-striped custom-table datatable mb-0">
                            <thead>
                                <tr>
                                    <th>Actor ID</th>
                                    <th>Actor Name</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.ActorList != null && Model.ActorList.Any())
                                {
                                    @foreach (var actor in Model.ActorList)
                                    {
                                        <tr>
                                            <td>@actor.ActorId</td>
                                            <td>@actor.ActorName</td>
                                            <td class="text-right">
                                                <div class="dropdown dropdown-action">
                                                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                                                        <i class="fa fa-ellipsis-v"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-menu-right">
                                                        <a class="dropdown-item" href="/Admin/Actor/Update">
                                                            <i class="fa fa-pencil m-r-5"></i> Edit
                                                        </a>
                                                        <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_actor">
                                                            <i class="fa fa-trash-o m-r-5"></i> Delete
                                                        </a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr><td colspan="3" class="text-center">No actors found.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Delete Confirmation Modal -->
        <div id="delete_movie" class="modal fade delete-modal" role="dialog">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <img src="assets/img/sent.png" alt="" width="50" height="46">
                        <h3>Are you sure want to delete this actor?</h3>
                        <div class="m-t-20">
                            <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="sidebar-overlay" data-reff=""></div>

    <!-- Scripts -->
    <script src="~/admin/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/admin/assets/js/popper.min.js"></script>
    <script src="~/admin/assets/js/bootstrap.min.js"></script>
    <script src="~/admin/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/admin/assets/js/select2.min.js"></script>
    <script src="~/admin/assets/js/moment.min.js"></script>
    <script src="~/admin/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/admin/assets/js/app.js"></script>
</body>
</html>
