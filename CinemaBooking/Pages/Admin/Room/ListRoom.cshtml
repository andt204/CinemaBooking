@page
@model CinemaBooking.Pages.Admin.Room.ListRoomModel
@{
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Room List";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">

    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/bootstrap-datetimepicker.min.css">
    <link rel="stylesheet" type="text/css" href="~/admin/assets/css/style.css">
</head>

<body>
    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-sm-4 col-3">
                    <h4 class="page-title">Room List</h4>
                </div>
                <div class="col-sm-8 col-9 text-right m-b-20">
                    <a target="_blank" href="/Admin/Room/CreateRoom" class="btn btn-primary float-right btn-rounded">
                        <i class="fa fa-plus"></i> Add New Room
                    </a>
                </div>
            </div>
            <div class="row filter-row">
                <form method="get" class="row filter-row">
                    <!-- Room ID Filter -->
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus">
                            <label class="focus-label">Room ID</label>
                            <input type="text" class="form-control floating" asp-for="RoomId" placeholder="Enter Room ID">
                        </div>
                    </div>

                    <!-- Room Name Filter -->
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus">
                            <label class="focus-label">Room Name</label>
                            <input type="text" class="form-control floating" asp-for="RoomName" placeholder="Enter Room Name">
                        </div>
                    </div>

                    <!-- Room Type Filter -->
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus select-focus">
                            <label class="focus-label">Room Type</label>
                            <select class="select floating form-control" asp-for="RoomType">
                                <option value="">Select Room Type</option>
                                <option>VIP</option>
                                <option>Standard</option>
                                <option>IMAX</option>
                                <option>4DX</option>
                            </select>
                        </div>
                    </div>

                    <!-- Status Filter -->
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group form-focus select-focus">
                            <label class="focus-label">Status</label>
                            <select class="select floating form-control" asp-for="Status">
                                <option value="">Select Status</option>
                                <option>Available</option>
                                <option>Unavailable</option>
                            </select>
                        </div>
                    </div>

                    <!-- Search Button -->
                    <div class="col-sm-6 col-md-3">
                        <button type="submit" class="btn btn-success btn-block">Search</button>
                    </div>
                </form>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table table-striped custom-table">
                            <thead>
                                <tr>
                                    <th>Room ID</th>
                                    <th>Room Name</th>
                                    <th>Room Type</th>
                                    <th>Number of Seats</th>
                                    <th>Number of Rows</th>
                                    <th>Number of Columns</th>
                                    <th>Theater</th>
                                    <th>Status</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var room in Model.Rooms)
                                {
                                    <tr>
                                        <td>@room.RoomId</td>
                                        <td>@room.RoomName</td>
                                        <td>@room.RoomType.RoomTypeName</td>
                                        <td>@room.RoomType.NumberOfSeat</td>
                                        <td>@room.RoomType.NumberOfRow</td>
                                        <td>@room.RoomType.NumberOfColumn</td>
                                        <td>@room.Theater.TheaterName</td>
                                        <td>@room.Status</td>
                                        <td class="text-right">
                                            <div class="dropdown dropdown-action">
                                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                                <div class="dropdown-menu dropdown-menu-right">
                                                    <a class="dropdown-item" href="/Admin/Room/UpdateRoom/@room.RoomId"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_room_@room.RoomId">
                                                        <i class="fa fa-trash-o m-r-5"></i> Delete
                                                    </a>
                                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#manageSeatsModal_@room.RoomId">
                                                        <i class="fa fa-chair m-r-5"></i> Manage Seats
                                                    </a>
                                                </div>
                                            </div>

                                            <!-- Delete confirmation modal for each room -->
                                            <div id="delete_room_@room.RoomId" class="modal fade delete-modal" role="dialog">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-body text-center">
                                                            <img src="~/admin/assets/img/sent.png" alt="" width="50" height="46">
                                                            <h3>Are you sure you want to delete this room?</h3>
                                                            <div class="m-t-20">
                                                                <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                                                                <form method="post" action="/Admin/Room/DeleteRoom/@room.RoomId" style="display:inline;">
                                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Manage Seats modal for each room -->
                                            <div id="manageSeatsModal_@room.RoomId" class="modal fade" role="dialog">
                                                <div class="modal-dialog modal-lg">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h4 class="modal-title">Manage Seats for @room.RoomName</h4>
                                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <!-- Seat management content goes here -->
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="submit" class="btn btn-success">Save Changes</button>
                                                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="delete_room" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="assets/img/sent.png" alt="" width="50" height="46">
                    <h3>Are you sure want to delete this Room?</h3>
                    <div class="m-t-20">
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Popup Manage Seats -->
    <div id="manageSeatsModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Manage Seats for Room A</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Row Name</th>
                                    <th>Number of Seats</th>
                                    <th>Seat Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody id="seatRows">
                                <!-- Các hàng ghế sẽ được thêm vào động -->
                            </tbody>
                        </table>
                        <!-- Nút thêm hàng -->
                        <button id="addRow" class="btn btn-secondary">Add Row</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
   
    <div class="sidebar-overlay" data-reff=""></div>
    <script src="~/admin/assets/js/jquery-3.2.1.min.js"></script>
    <script src="~/admin/assets/js/popper.min.js"></script>
    <script src="~/admin/assets/js/bootstrap.min.js"></script>
    <script src="~/admin/assets/js/jquery.dataTables.min.js"></script>
    <script src="~/admin/assets/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/admin/assets/js/jquery.slimscroll.js"></script>
    <script src="~/admin/assets/js/select2.min.js"></script>
    <script src="~/admin/assets/js/moment.min.js"></script>
    <script src="~/admin/assets/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/admin/assets/js/app.js"></script>
</body>

</html>

